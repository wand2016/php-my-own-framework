{
    "name": "wand2016/php-my-own-framework",
    "description": "Ore Ore simple web framework",
    "license": "Apache-2.0",
    "require": {
        "php": "^7.2",
        "ext-intl": "^1.1",
        "ext-mbstring": "^7.2",
        "guzzlehttp/guzzle": "^6.3",
        "phpunit/phpunit": "^8.4"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": ["app/"]
        },
        "files": ["src/functions.php"]        
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": ["tests/"]
        },
        "files": ["src/functions.php"]
    }
}
